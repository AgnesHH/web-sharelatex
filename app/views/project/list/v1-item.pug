		//- button.btn.btn-link.projectName(
		//- 	ng-click="openV1ImportModal(project)"
		//- 	stop-propagation="click"
		//- ) {{project.name}}

.col-xs-2
	span.owner {{ownerName()}}

.col-xs-4
	span.last-modified {{project.lastUpdated | formatDate}}