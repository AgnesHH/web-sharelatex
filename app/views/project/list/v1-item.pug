.col-xs-6
	span.v1-badge(
		aria-label=translate("v1_badge")
		tooltip-template="'v1ProjectTooltipTemplate'"
		tooltip-append-to-body="true"
	)
	span
		if settings.overleaf && settings.overleaf.host
			a.projectName(
				href=settings.overleaf.host + "/{{project.id}}"
				target="_blank"
			) {{project.name}}
